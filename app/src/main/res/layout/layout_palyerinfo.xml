<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_panel_player_info">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignRight="@id/imageView5"
            android:layout_alignStart="@id/imageView1"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_role_model" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView5"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView6"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView7"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="@dimen/px_112"
            android:layout_height="@dimen/px_112"
            android:layout_alignTop="@+id/imageView9"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/imageView7"
            android:layout_toStartOf="@+id/imageView7"
            android:background="@drawable/bg_inventory_item"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_panel_player_info"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:background="@drawable/bg_page_bottom"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>